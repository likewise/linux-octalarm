&gpio5 {
	gpio-line-names = "[GPIO5-IO00]", "[GPIO5-IO01]", "[GPIO5-IO02]", "[GPIO5-IO03]", "[GPIO5-IO04]", "[GPIO5-IO05]", "[GPIO5-IO06]", "[GPIO5-IO07]",
					  "[GPIO5-IO08]", "OUT2-OC",      "NFC-IRQ",      "[GPIO5-IO11]", "[GPIO5-IO12]", "[GPIO5-IO13]", "SW-PWROFF", "[GPIO5-IO15]",
